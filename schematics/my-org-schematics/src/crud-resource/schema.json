{
    "$schema": "http://json-schema.org/schema",
    "id": "HelloSchema",
    "title": "Hello Schema",
    "type": "object",
    "description": "Says hello to someone",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the person",
            "$default": {
                "$source": "argv",
                "index": 0
            }        
        },
        "url": {
            "type": "string",
            "x-prompt": "What is the resource url (eg: /api/resource)?"
        }
    },
    "required": [
        "name"
    ]
}